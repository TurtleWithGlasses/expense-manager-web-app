# ==============================================
# EXPENSE MANAGER - ENVIRONMENT CONFIGURATION
# Phase 12: Production Configuration
# ==============================================

# Application Settings
APP_NAME=Expense Manager
APP_ENV=production  # development, staging, production
DEBUG=false
SECRET_KEY=your-secret-key-here-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///app.db  # For production, use PostgreSQL: postgresql://user:pass@localhost/dbname

# Security Settings
SESSION_SECRET=your-session-secret-here-change-this
CSRF_SECRET=your-csrf-secret-here-change-this
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Server Configuration
HOST=0.0.0.0
PORT=5000
WORKERS=4  # Number of worker processes

# CORS Settings (if needed)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_FOLDER=uploads

# Email Configuration (for notifications, if implemented)
# Gmail SMTP
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password-here  # Generate at https://myaccount.google.com/apppasswords
FROM_EMAIL=your-email@gmail.com
FROM_NAME=Your App Name

# Alternative: Resend API (recommended for production)
RESEND_API_KEY=re_your_resend_api_key_here  # Get from https://resend.com
RESEND_FROM_EMAIL=your-email@yourdomain.com
RESEND_FROM_NAME=Your App Name

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Cache Configuration
CACHE_TYPE=simple  # simple, redis, memcached
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100 per hour

# Session Configuration
SESSION_COOKIE_SECURE=true  # Set to true in production (HTTPS only)
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=86400  # 24 hours in seconds

# AI/ML Settings (if using AI features)
AI_MODEL_PATH=models/expense_classifier.pkl
AI_TRAINING_ENABLED=true

# Currency API (for currency conversion)
CURRENCY_API_KEY=your-api-key-here
CURRENCY_API_URL=https://api.exchangerate-api.com/v4/latest/

# Analytics (optional)
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Feature Flags
FEATURE_BULK_OPERATIONS=true
FEATURE_ADVANCED_FILTERS=true
FEATURE_AI_PREDICTIONS=true
FEATURE_EXPORT_PDF=true
FEATURE_EXPORT_EXCEL=true

# Performance Settings
ENABLE_MINIFICATION=true
ENABLE_COMPRESSION=true
CACHE_STATIC_ASSETS=true

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM (cron format)
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# Monitoring (optional integrations)
SENTRY_DSN=https://your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-newrelic-key-here

# Development Only (DO NOT USE IN PRODUCTION)
# SKIP_AUTH=false
# MOCK_DATA=false
